@model IEnumerable<Album>
@{
    ViewBag.Title = "Recommandation";
}
<h3>Browse Genres</h3>

<p>
    Select from @Model.Count() albums:
</p>
<ul class="list-group">
    @foreach (var album in Model)
    {
        <li class="list-group-item"><a asp-controller="Store" asp-action="Browse" asp-route-genre="@album.Genre.Name">@album.Title</a></li>
    }
</ul>